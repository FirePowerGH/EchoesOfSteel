script/source = "extends CharacterBody2D

const SPEED = 100.0
const JUMP_VELOCITY = -300.0
const DASH_SPEED_X = 300.0
const DASH_SPEED_Y = DASH_SPEED_X * 0.8
const DASH_DURATION = 0.2

var dash_direction = Vector2.ZERO
var is_dashing = false
var can_dash = true
var can_jump = false
var turn = false

@onready var sword = $sword
@onready var sword_col = $sword/CollisionShape2D
@onready var sword_timer = $sword/swordTimer
@onready var coyote_time = $CoyoteTime
@onready var dash_cooldown = $DashCooldown
@onready var sprite = $AnimatedSprite2D
@onready var ray_to_ground = $DistanceToGround
@onready var menu = $playerMenu

@export var hp: int
var initHearts = false

var num = 0

func _ready():
	dash_cooldown.timeout.connect(_on_DashCooldown_timeout)

func _physics_process(delta: float) -> void:
	# Get the input direction and handle the movement/deceleration.
	var direction = get_input_direction()
	
	if Input.is_action_just_pressed(\"dash\") && can_dash:
		start_dash(direction)
	
	if !is_dashing:
		handle_movement(direction)
	
	canDash()
	
	var gravity = get_gravity()
	
	# Walljump
	if is_on_wall():
		if velocity.y > 0:
			gravity = Vector2(0, 320)
		if Input.is_action_just_pressed(\"jump\"):
			if velocity.x < 0:
				velocity = Vector2(200, -270)
			elif velocity.x > 0:
				velocity = Vector2(-200, -270)
	
	# Add the gravity.
	if not is_on_floor() and !is_dashing:
		velocity += gravity * delta
	
	# Jump.
	if Input.is_action_just_pressed(\"jump\") && (canJump()):
		can_jump = false
		velocity.y = JUMP_VELOCITY
	
	if Input.is_action_just_released(\"jump\"):
		if velocity.y <   0:
			velocity.y = JUMP_VELOCITY / 4
	
	var was_on_floor = is_on_floor()
	
	if Input.is_action_just_pressed(\"attack\") && !is_dashing:
		changeAttackState()
		sword.visible = true
		sword_col.disabled = false
		sword_timer.start()
	
	animateState()
	
	if sword_timer.is_stopped():
		sword.visible = false
		sword_col.disabled = true
	else:
		sprite.flip_h = turn
	
	move_and_slide()
	
	if was_on_floor && !is_on_floor():
		was_on_floor = false
		coyote_time.start()

func start_dash(direction):
	dash_direction = direction
	is_dashing = true
	can_dash = false
	velocity.x = dash_direction.x * DASH_SPEED_X
	velocity.y = dash_direction.y * DASH_SPEED_Y
	dash_cooldown.start(DASH_DURATION)

func canDash():
	if is_on_floor():
		if !is_dashing:
			can_dash = true

# Handle if the player is able to jump
func canJump():
	if is_on_floor() || !coyote_time.is_stopped():
		can_jump = true
	return can_jump

func _on_DashCooldown_timeout():
	is_dashing = false

func handle_movement(direction):
	if direction:
		velocity.x = move_toward(velocity.x, direction.x * SPEED, 36.0)
	else:
		velocity.x = move_toward(velocity.x, 0, SPEED)

func animateState():
	if velocity == Vector2.ZERO:
		sprite.play(\"idle\")
	elif is_dashing:
		sprite.play(\"dash\")
	elif velocity.y > 0:
		if ray_to_ground.is_colliding():
			sprite.play(\"fallFin\")
		else:
			sprite.play(\"fall\")
	elif velocity.x != 0:
		sprite.play(\"walk\")
		
		if velocity.x > 0:
			sprite.flip_h = false
		else:
			sprite.flip_h = true

func get_input_direction():
	var direction = Vector2.ZERO
	
	if Input.is_action_pressed(\"right\"):
		direction.x = 1
	elif Input.is_action_pressed(\"left\"):
		direction.x = -1
	if Input.is_action_pressed(\"up\"):
		direction.y = -1
	elif Input.is_action_pressed(\"down\"):
		direction.y = 1
	
	direction = direction.normalized()
	
	return direction

func changeAttackState() -> void:
	sword.get_child(0).frame = 0
	sword.get_child(0).play(\"slash\")
	
	if get_local_mouse_position().x > 0:
		sword.scale.x = 0.7
		turn = false
	else:
		sword.scale.x = -0.7
		turn = true
"

